<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="405" d:DesignHeight="800"
             x:Class="ShoppingList.LoginView">
  <Grid RowDefinitions="*, 5*, *"  HorizontalAlignment="Stretch" VerticalAlignment="Center">
    <TextBlock Grid.Row="0" Text="{DynamicResource Login}" Classes="h1" Margin="30" HorizontalAlignment="Center"/>
    <StackPanel Grid.Row="1" Margin="30" Spacing="10">
      <TextBlock Text="{DynamicResource Email}" />
      <TextBox />
      <TextBlock Text="{DynamicResource Password}"/>
      <TextBox />
    </StackPanel>
  </Grid>
</UserControl>
