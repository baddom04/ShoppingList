<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ShoppingList.ViewModels"
             mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="800"
             x:Class="ShoppingList.Views.MainView"
             x:DataType="vm:MainViewModel">
  <Grid RowDefinitions="Auto, Auto, Auto">
    <TextBlock Text="Shopping list" HorizontalAlignment="Center" Margin="20" FontSize="23"/>
    <ItemsControl Grid.Row="1" ItemsSource="{Binding ShoppingList}" Margin="20">
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal" Margin="10 0" Spacing="10">
            <TextBlock Text="{Binding Name}"/>
            <TextBlock Text="{Binding Quantity}"/>
          </StackPanel>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
    <Button Grid.Row="2" HorizontalAlignment="Center">
      <PathIcon Data="{StaticResource add_regular}"/>
    </Button>
  </Grid>
</UserControl>
