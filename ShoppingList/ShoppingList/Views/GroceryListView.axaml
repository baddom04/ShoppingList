<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ShoppingList.ViewModels"
             mc:Ignorable="d" d:DesignWidth="405" d:DesignHeight="900"
             x:Class="ShoppingList.Views.GroceryListView"
             x:DataType="vm:GroceryListViewModel"
             Background="{StaticResource MainBG}">

  <Grid RowDefinitions="Auto, Auto">

    <!--ConfirmationPopup-->
    <Border Name="DialogOverlay" ZIndex="1"
            Background="#80000000"
            IsVisible="False"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Grid.RowSpan="2">
      <Border CornerRadius="10" Background="{StaticResource MainBG}"
              HorizontalAlignment="Center" VerticalAlignment="Center"
              Width="300" Height="150" ZIndex="2">
        <Grid RowDefinitions="Auto, Auto" VerticalAlignment="Center">
          <TextBlock Grid.Row="0" Text="Are you sure?" HorizontalAlignment="Center" VerticalAlignment="Top"/>
          <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 10 0 0">
            <Button Content="Confirm" Margin="5" Width="100" Click="Confirm_Click"/>
            <Button Content="Cancel" Margin="5" Width="100" Click="Cancel_Click" IsDefault="True"/>
          </StackPanel>
        </Grid>
      </Border>
    </Border>

    <!--Title-->
    <TextBlock Grid.Row="0" Text="Shopping list" HorizontalAlignment="Center" Margin="20" Classes="h1"/>

    <ScrollViewer Grid.Row="1">
      <Grid RowDefinitions="Auto, Auto, Auto">
        <!--List-->
        <ItemsControl Grid.Row="0" ItemsSource="{Binding ShoppingList}" Margin="20">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <Border Classes="shopping_list_item" BorderBrush="{StaticResource MainButtonBG}" BorderThickness="2" Margin="0 5">
                <Grid Margin="10" ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto">
                  <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding Name}"
                             VerticalAlignment="Center" TextWrapping="Wrap" MaxWidth="150"/>
                  <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding QuantityDisplay}" VerticalAlignment="Center" Margin="10 0" TextWrapping="Wrap"/>
                    <Button Grid.Column="3" Grid.Row="0" Command="{Binding ToggleExpandedCommand}"
                            Classes.animatedIn="{Binding IsExpanded}"
                            Classes.animatedOut="{Binding !IsExpanded}">
                      <PathIcon Data="{StaticResource chevron_down_regular}"/>
                    </Button>
                  </StackPanel>
                  <Grid Grid.Row="1" Grid.ColumnSpan="4" IsVisible="{Binding IsExpanded}" RowDefinitions="Auto, Auto">
                    <TextBlock Grid.Row="0" IsVisible="{Binding Description, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" Text="{Binding Description}" Classes="mini" Margin="10" TextWrapping="Wrap"/>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="15" Margin="10 10 10 0" HorizontalAlignment="Center">
                      <Button Classes="green shopping_list_button" Click="Bought_Click" Tag="{Binding}">
                        <PathIcon Data="{StaticResource money_regular}"/>
                      </Button>
                      <Button Classes="red shopping_list_button" Click="Delete_Click" Tag="{Binding}">
                        <PathIcon Data="{StaticResource delete_regular}"/>
                      </Button>
                    </StackPanel>
                  </Grid>
                </Grid>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!--InputForm-->
        <StackPanel Grid.Row="1" Spacing="10" IsVisible="{Binding InputMode}" Margin="20 0 20 20">
          <Grid ColumnDefinitions="*, Auto, Auto" RowDefinitions="Auto, Auto">
            <TextBox Grid.Row="0" Grid.Column="0" x:Name="ItemName" Watermark="Your item's name" MaxLength="34" TextWrapping="Wrap"/>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="ItemQuantity" Watermark="123" MaxLength="3" TextChanged="OnTextChanged"/>
            <ComboBox Grid.Row="0" Grid.Column="2" x:Name="ItemUnit" ItemsSource="{Binding Units}" SelectedItem="{Binding SelectedUnit}" VerticalAlignment="Stretch"/>
            <TextBox Grid.Row="1" Grid.ColumnSpan="3" x:Name="ItemDescription" Watermark="This is an optional description for your item" TextWrapping="Wrap"/>
          </Grid>
          <!--ErrorMessage-->
          <TextBlock Classes="error" x:Name="ErrorMessage"/>
        </StackPanel>

        <!--Confirm Dismiss Buttons-->
        <StackPanel Grid.Row="2" Orientation="Horizontal" IsVisible="{Binding InputMode}" Spacing="15" HorizontalAlignment="Center">
          <Button Classes="shopping_list_button" Click="Save_Click">
            <PathIcon Data="{StaticResource checkmark_regular}"/>
          </Button>
          <Button Classes="shopping_list_button" Command="{Binding InputModeToggleCommand}">
            <PathIcon Data="{StaticResource dismiss_regular}"/>
          </Button>
        </StackPanel>

        <!--Add Button-->
        <Button Grid.Row="2" IsVisible="{Binding !InputMode}" HorizontalAlignment="Center" Classes="shopping_list_button" Command="{Binding InputModeToggleCommand}">
          <PathIcon Data="{StaticResource add_regular}"/>
        </Button>

      </Grid>
    </ScrollViewer>
  </Grid>
</UserControl>
