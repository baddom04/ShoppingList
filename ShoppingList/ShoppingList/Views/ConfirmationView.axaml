<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ShoppingList.ConfirmationView">
  <Border x:Name="DialogOverlay" ZIndex="1"
            Background="#80000000"
            IsVisible="False"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch">
    <Border CornerRadius="10" Background="{StaticResource MainBG}"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            MaxWidth="300" ZIndex="2" Padding="30">
      <Grid RowDefinitions="Auto, Auto" VerticalAlignment="Center">
        <TextBlock Grid.Row="0" x:Name="DialogQuestion"
                   HorizontalAlignment="Center" VerticalAlignment="Top"
                   TextWrapping="Wrap" TextAlignment="Center"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 10 0 0">
          <Button Content="{DynamicResource Confirm}" Margin="5" Width="100" Click="Confirm_Click"/>
          <Button Content="{DynamicResource Cancel}" Margin="5" Width="100" Click="Cancel_Click"/>
        </StackPanel>
      </Grid>
    </Border>
  </Border>
</UserControl>
